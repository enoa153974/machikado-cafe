---
import siteData from '../../../siteData.mjs';
import BaseLayout from '../../layouts/BaseLayout.astro';

const pageId = 'contact',
    pageMeta = siteData[pageId],
    ldJSON = [
        {
            '@type': 'ListItem',
            position: 6,
            item: {
                '@id': `${import.meta.env.PUBLIC_ENVURL}${pageMeta.path}`,
                name: 'contact'
            }
        }
    ];

const currentPath = pageMeta.path;
---

<!--BaseLayout.hemlの<slot />内に代入される -->
<BaseLayout
    pageName={pageId}
    title={pageMeta.title}
    description={pageMeta.description}
    ogpImage={pageMeta.ogpImage}
    type={pageMeta.type}
    path={pageMeta.path}
    ldJSON={ldJSON}
    currentPath={currentPath}
>
    <iframe
        src="https://docs.google.com/forms/d/e/1FAIpQLSfYJemx3Btw7eWGMg8KmlHLaMnBwkr5vn-Ve38I5IVu1QVmbw/viewform?embedded=true"
        width="100%"
        height="1000"
        style="border:0; margin:0; padding:0;"
        loading="lazy"
        allowfullscreen>読み込んでいます…</iframe
    >
</BaseLayout>
