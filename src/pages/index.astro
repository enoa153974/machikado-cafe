---
import siteData from '../../siteData.mjs';
import BaseLayout from '../layouts/BaseLayout.astro';
import Gallery from '../components/Gallery.astro';
import Cardbox from '../components/Cardbox.astro';
import News from '../components/News.astro';
import ShopIntro from '../components/ShopIntro.astro';
import SNSCTA from '../components/SNSCTA.astro';
import Voices from '../components/Voices.astro';
import TabbedSection from '../components/TabbedSection.astro';

const pageId = 'home',
    pageMeta = siteData[pageId],
    ldJSON = [
        {
            '@type': 'ListItem',
            position: 1,
            item: {
                '@id': `${import.meta.env.PUBLIC_ENVURL}`,
                name: 'HOME'
            }
        }
    ];

const currentPath = '/';
---

<!--BaseLayout.hemlの<main />と<side />内に代入される -->
<BaseLayout
    pageName={pageId}
    title={pageMeta.title}
    description={pageMeta.description}
    ogpImage={pageMeta.ogpImage}
    type={pageMeta.type}
    path={pageMeta.path}
    ldJSON={ldJSON}
    currentPath={currentPath}
>
    <Fragment slot="main">
        <!-- メインコンテンツ -->
        <Gallery
            title="街角カフェのおすすめメニュー"
            gallerys={[
                {
                    image: '/assets/images/tentou_01.JPG',
                    alt: ''
                },
                {
                    image: '/assets/images/tentou_02.jpg',
                    alt: ''
                },
                {
                    image: '/assets/images/tentou_03.jpg',
                    alt: ''
                }
            ]}
        />

        <Cardbox />

        <div class="map l-container px-8">
            <h2 class="font-bold u-heading-line mb-6">お店の場所</h2>
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3276.905040877367!2d135.62094841520982!3d34.783165780413405!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x60011ddc93c8c745%3A0xf55bd0aebda46ecc!2z44Ki44Or44O744OX44Op44K26aaZ6YeM5ZyS!5e0!3m2!1sja!2sjp!4v1670760042840!5m2!1sja!2sjp"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </Fragment>

    <Fragment slot="side">
        <!-- サイドコンテンツ -->
        <News
            text="お知らせ"
            subtitle="News"
            buttonHref="/news"
            newsItems={[
                {
                    date: '2023.05.15',
                    category: '新メニュー',
                    title: 'プレミアムな新作クレープが2種類追加！'
                },
                {
                    date: '2023.04.05',
                    category: '新メニュー',
                    title: '新発売！ガーリックバターポテト'
                },
                {
                    date: '2023.01.19',
                    category: '新メニュー',
                    title: '新発売！いちごショコラクリーム'
                }
            ]}
        />
        <ShopIntro />
        <SNSCTA
            text="Instagram"
            buttonLabel="follow me!"
            buttonHref="移管先リンク"
        />
    </Fragment>
</BaseLayout>
