---
import siteData from '../../../siteData.mjs';
import BaseLayout from '../../layouts/BaseLayout.astro';
import NewsPage from '../../components/NewsPage.astro';
import { getNewsItems } from '../../lib/news';

const newsItems = await getNewsItems(); // 全件

const pageId = 'news',
    pageMeta = siteData[pageId],
    ldJSON = [
        {
            '@type': 'ListItem',
            position: 5,
            item: {
                '@id': `${import.meta.env.PUBLIC_ENVURL}${pageMeta.path}`,
                name: 'news'
            }
        }
    ];

const currentPath = '/news';
---

<!--BaseLayout.hemlの<slot />内に代入される -->
<BaseLayout
    pageName={pageId}
    title={pageMeta.title}
    description={pageMeta.description}
    ogpImage={pageMeta.ogpImage}
    type={pageMeta.type}
    path={pageMeta.path}
    ldJSON={ldJSON}
    currentPath={currentPath}
>
    <NewsPage />
</BaseLayout>
