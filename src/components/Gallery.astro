---
/* page.astro で以下のように記述して呼び出し

    <Gallery
        title="ギャラリー"
        gallerys={[
            {
                image: '/assets/image/gallery_pht_01.jpg',
                alt: ''
            },
            {
                image: '/assets/image/gallery_pht_02.jpg',
                alt: ''
            },
            {
                image: '/assets/image/gallery_pht_03.jpg',
                alt: ''
            }
        ]}
    /> */

interface Props {
    title: string;
    gallerys: gallerys[];
}
interface gallerys {
    image: string;
    alt: string;
}

const { title, gallerys } = Astro.props as Props;
---

<section class="gallery l-wrapper pt-8 px-10 sm:pt-8">
    <div class="l-container">
        <h2 class="gallery__heading u-heading-line font-bold">{title}</h2>

        <div class="slider__wrapper py-8 px-10 sm:pt-0">
            <div class="slider autoplay slider__track">
                {
                    gallerys.map((gallerys: gallerys, i: number) => (
                        <div class="card">
                            <div class="card__inner">
                                <img src={gallerys.image} alt={gallerys.alt} class="block" />
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>

        <div class="slider__dots flex justify-center items-center"></div>
    </div>
</section>
