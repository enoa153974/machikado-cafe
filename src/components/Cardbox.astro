---
import Card from './Card.astro';
---

<section class="card-box">
    <div class="l-wrapper px-8 pt-10">
        <div class="card-box__container l-container-full sm:pt-10 pb-8">
            <h2 class="card-box__heading font-bold u-heading-line sm:pb-3">MENU</h2>
            <div class="card-box__card pt-6 sm:pt-4">
                <Card
                    imgSrc="/public/assets/images/strawberrychocobanana.png"
                    alt=""
                    text="いちごチョコバナナ"
                    className="card-box__card-item card-box__card-item--01"
                />

                <Card
                    imgSrc="/public/assets/images/chocobanana.png"
                    alt=""
                    text="チョコバナナ"
                    className="card-box__card-item"
                />

                <Card
                    imgSrc="/public/assets/images/hamtunacheese.png"
                    alt=""
                    text="ハムツナチーズ"
                    className="card-box__card-item"
                />
            </div>
        </div>
    </div>
</section>

