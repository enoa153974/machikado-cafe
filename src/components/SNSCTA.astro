---
import Button from '../components/Button';
import Card from '../components/Card.astro';
interface CtaProps {
    text: string;
    buttonLabel: string;
    buttonHref: string;
}

const { text, buttonLabel, buttonHref } = Astro.props as CtaProps;
---

<!-- 以下で呼び出し
    <CTA
        text="ctaキャッチコピーctaキャッチコピーctaキャッチコピー"
        buttonLabel="ボタン内テキスト"
        buttonHref="移管先リンク"
    />
-->

<div class="cta--sns mt-20 px-10">
    <h2 class="u-heading-line text-center mb-6">SNS</h2>
    <h3 class="text-center">{text}</h3>
        <Card
            imgSrc='/assets/images/machikadocafe_kourienn_qr.png'
            alt="Instagram"
            text="follow me!"
            className='insta__card'
        />
    <Button href={buttonHref} className="cta__btn" variant="push">
        <span>{buttonLabel}</span>
    </Button>
</div>
