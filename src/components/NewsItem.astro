---
// components/NewsItem.astro
interface Props {
    date: string;
    category: string;
    title: string;
}

const { date, category, title } = Astro.props;
const categoryClass = category === '新情報' ? 'badge--release' : 'badge--notice';
---

<div class="news-item flex flex-col items-center pt-4 px-2 pb-4 sm:pt-3 sm:pb-3 sm:px-0">
    <div class="news-item__inner flex items-center justify-center">
        <div class="news-date font-bold">{date}</div>
        <span class={`news-badge text-center ${categoryClass}`}>{category}</span>
    </div>
    <div class="news-title font-bold pl-2">{title}</div>
</div>

<style>
    .news-item {
        gap: 16px;
        border-bottom: 3px solid #ddd;
    }
    .news-item__inner {
        width: 100%;
        gap: 1rem;
    }
    /* ▼ 日付 */
    .news-date {
        color:var(--text-color);
        font-size: 1rem;
    }
    /* ▼ カテゴリー */
    .news-badge {
        display: inline-block;
        font-size: 0.5rem;
        padding: 4px;
        border-radius: 4px;
        color: white;
        width: 20%;
    }
    /* ▼ お知らせ */
    .badge--notice {
        background-color: var(--sub-color);
    }
    /* ▼ 新作ニュース */
    .badge--release {
        background-color:var(--sub-color);
    }
    /* ▼ ニュースタイトル */
    .news-title {
        flex: 1;
        color: var(--text-color);
        font-size: 1rem;
    }
    @media (max-width: 767px) {
        .news-item {
            flex-direction: column;
            align-items: flex-start;
        }

        .news-item__inner {
            display: flex;
            width: 100%;
        }
        .news-badge {
            width: 37%;
        }
        .news-title {
            padding: 0;
        }
    }
</style>